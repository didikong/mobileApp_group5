
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="MainMenuButton">
     	<item name="android:layout_width" >fill_parent</item>
    	<item name="android:layout_height" >wrap_content</item>
    
      	<item name="android:background">@drawable/rounded_shape_btn</item>
     
      	<item name="android:layout_gravity" >center</item>
    	<item name="android:layout_margin" >3dp</item>
     
        <item name="android:textColor">@color/main_menu_button_text_color</item>
        <item name="android:textSize" >20sp</item>
    	<item name="android:textStyle" >bold</item>
    </style>
   

	<style name="LevelRadioButton">
	    <item name="android:layout_width" >wrap_content</item>
    	<item name="android:layout_height" >wrap_content</item>
    	
    	<item name="android:layout_marginLeft">100dp</item> 	   	
    	
    	<item name="android:textSize" >20sp</item>
	    <item name="android:textColor">@color/main_menu_button_text_color</item>
	</style>
   
    
	<style name="HighscoreListNumbers">
	    <item name="android:layout_marginLeft">50dp</item> 	   	
	    <item name="android:layout_marginTop">30dp</item>
    	
    	<item name="android:textSize" >20sp</item>
	    <item name="android:textColor">@color/main_menu_button_text_color</item>
	</style>
	
	<style name="HighscoreListScores">
	    <item name="android:layout_marginLeft">150dp</item> 	   	
	    <item name="android:layout_marginTop">30dp</item>
    	
    	<item name="android:textSize" >15sp</item>
	</style>
	
	
	<style name="HelpText">
	    <item name="android:textSize" >20sp</item>
	</style>
</resources>
